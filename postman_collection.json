{
  "info": {
    "name": "FeePaymentSystem_FeeAssignments",
    "_postman_id": "3d9f5b8c-6c3e-4d2f-b7a4-2e5f7c8d9a3c",
    "description": "Tests for Fee Assignments endpoints in the Fee Payment System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Admin Fee Assignments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{schoolToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/school/fee-assignments?feeType=Tuition&status=overdue&page=1&limit=10&sortBy=dueDate&order=asc",
          "host": ["{{BASE_URL}}"],
          "path": ["school", "fee-assignments"],
          "query": [
            { "key": "feeType", "value": "Tuition" },
            { "key": "status", "value": "overdue" },
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "sortBy", "value": "dueDate" },
            { "key": "order", "value": "asc" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Admin Fee Assignments (Group Criteria)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{schoolToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/school/fee-assignments?department=Computer Science&yearOfStudy=Freshman",
          "host": ["{{BASE_URL}}"],
          "path": ["school", "fee-assignments"],
          "query": [
            { "key": "department", "value": "Computer Science" },
            { "key": "yearOfStudy", "value": "Freshman" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Student Fee Assignments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{studentToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/students/fee-assignments?feeType=Tuition&status=assigned",
          "host": ["{{BASE_URL}}"],
          "path": ["students", "fee-assignments"],
          "query": [
            { "key": "feeType", "value": "Tuition" },
            { "key": "status", "value": "assigned" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Admin Fee Assignments (Invalid Token)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer invalid_token",
