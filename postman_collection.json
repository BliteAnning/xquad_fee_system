    {
      "name": "Get Student Fee Assignments (Missing Parameters)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{studentToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/students/fee-assignments?feeType=",
          "host": ["{{BASE_URL}}"],
          "path": ["students", "fee-assignments"],
          "query": [
            { "key": "feeType", "value": "" }
          ]
        }
      },
      "response": []
    }
  ],
